{
  "extends": ["eslint:recommended", "plugin:drupal/recommended"],
  "plugins": ["drupal"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": ["error", { "args": "none" }],
    "linebreak-style": ["error", "unix"]
  }
}
